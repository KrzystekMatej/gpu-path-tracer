{
  "version": 3,
  "buildPresets": [
    { "name": "linux-x64-debug", "configurePreset": "linux-x64-debug" },
    { "name": "linux-x64-release", "configurePreset": "linux-x64-release" },
    { "name": "windows-x64-debug-vcpkg", "configurePreset": "windows-x64-debug-vcpkg" },
    { "name": "windows-x64-release-vcpkg", "configurePreset": "windows-x64-release-vcpkg" },
    { "name": "linux-x64-debug-vcpkg", "configurePreset": "linux-x64-debug-vcpkg" },
    { "name": "linux-x64-release-vcpkg", "configurePreset": "linux-x64-release-vcpkg" },
  ],
  "configurePresets": [
    {
      "name": "windows-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CUDA_ARCHITECTURES": "native"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "linux-base",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/Build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_CUDA_ARCHITECTURES": "native"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },
    {
      "name": "linux-x64-debug",
      "displayName": "Linux x64 Debug",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release",
      "displayName": "Linux x64 Release",
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },

    {
      "name": "windows-base-vcpkg",
      "hidden": true,
      "inherits": "windows-base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake",
        "VCPKG_TARGET_TRIPLET": "x64-windows"
      }
    },
    {
      "name": "linux-base-vcpkg",
      "hidden": true,
      "inherits": "linux-base",
      "cacheVariables": {
        "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
      }
    },
    {
      "name": "windows-x64-debug-vcpkg",
      "displayName": "Windows x64 Debug (vcpkg)",
      "inherits": "windows-base-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "windows-x64-release-vcpkg",
      "displayName": "Windows x64 Release (vcpkg)",
      "inherits": "windows-base-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "linux-x64-debug-vcpkg",
      "displayName": "Linux x64 Debug (vcpkg)",
      "inherits": "linux-base-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug"
      }
    },
    {
      "name": "linux-x64-release-vcpkg",
      "displayName": "Linux x64 Release (vcpkg)",
      "inherits": "linux-base-vcpkg",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    }
  ]
}